/* pages/shop/shop.wxss */
@import "/wxSearch/wxSearch.wxss";
view {
display:block;
}
.grid {
    position: relative;
    float: left;
    padding: 20px 10px;
    width: 33.33333333%;
    box-sizing: border-box;
    text-decoration: none
}

.grids-small .grid {
    width: 33.3%;
    padding: 15px 8px
}

.grid_icon {
    width: 28px;
    height: 28px;
    margin: 0 auto
}

.grid_icon .grid_img {
    display:block;
    width:100%;
    height:100%;
}
.grid_icon+.grid_label {
    margin:5px 0 0;
}

.grid_label {
    display: block;
    text-align: center;
    color: #000;
    font-size: 14px
}
.grids.grids-small {
    border-bottom-style: solid;
    border-bottom-width: 2rpx;
    border-bottom-color: #eee;
    width: 100%;
}
.new_product_view image{
    width: 100%;
    height: 250rpx;
}
.new_product_view navigator {
    width: 30%;
    height: 100%;
    margin: 10rpx;
}
.new_product_view {
    margin: 10rpx;
    width: 100%;
}
.new_product_view view {
    flex-direction: row;
    display: flex;
}

.des {
    flex-direction: column;
}

.product_name {
    font-size: 30rpx;
    /* -ms-content-zoom-limit-max: 10; */
    overflow:hidden; 
    text-overflow:ellipsis;
    white-space:nowrap; 
}

.product_price {
    font-size: 30rpx;
    color: red;  
}

.product_list {
    display: flex;
    flex-direction: column;
    width: 100%;
}
.product_item navigator{
    width: 100%;
    display: flex;
}

.product_item image {
    height: 100rpx;
    width: 100rpx;
    margin: 10rpx;
}

.hot_product_view {
    width: 100%;
}
.product_item {
    width: 100%;
    padding: 10rpx;
    border-bottom-style: solid;
    border-bottom-width: 5rpx;
    border-bottom-color: #eee;   
}

.product_des {
    display: flex;
    flex-direction: column;
    margin-left: 10%; 
    padding: 10rpx;
}

image.enter_button {
    width: 50rpx;
    height: 50rpx;
    /* margin: 10rpx; */
    /* margin-left: 50rpx;  */
    padding: 20rpx;
}