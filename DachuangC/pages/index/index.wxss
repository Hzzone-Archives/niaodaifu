/**index.wxss**/

swiper {
    width: 750rpx;
    height: 400rpx;
    padding-bottom: 15rpx;
    border-bottom: 15rpx solid #eee;
}

.top_area {
    display: flex;
    flex-direction: column;
    border-radius: 50%;
    border: 10rpx solid #eee;
    width: 300rpx;
    height: 300rpx;
    justify-content: center;
}

.top_area image {
    height: 100rpx;
    width: 100rpx;
}

swiper-item {
    display: flex;
    align-items: center;
    justify-content: center;
}

.index_items {
    padding-left: 20rpx;
}

.index_item_icon {
    height: 60rpx;
    width: 60rpx;
    padding-right: 10rpx;
}

.enter_icon {
    height: 60rpx;
    width: 60rpx;
}

.index_item {
    display: flex;
    align-items: center;
    border-bottom: 3rpx solid #eee;
    padding-bottom: 5rpx;
    justify-content: space-between;
}

.items_container {
    display: flex;
    flex-direction: column;
    padding: 10rpx;
    border-bottom: 20rpx solid #eee;
}

.content_item {
    display: flex;
    flex-direction: column;
    padding-left: 10rpx; 
}

.name {
    font-size: 40rpx;
}
.content {
    font-size: 35rpx;
    color: #707070;
}

.title {
    border-bottom: 5rpx solid #eee;
}

.tab_1 {
     display: flex;
     align-items: center;
}
